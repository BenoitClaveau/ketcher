{
  "extends": "../../../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "noImplicitAny": false,
    "jsx": "react-jsx",
    "paths": {
      "domain/*": ["./src/domain/*"],
      "application/*": ["./src/application/*"],
      "infrastructure/*": ["./src/infrastructure/*"],
      "utilities": ["./src/utilities"]
    }
  },
  "include": ["src/**/*", "src/**/*.json"]
}
